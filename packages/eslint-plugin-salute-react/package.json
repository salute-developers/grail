{
  "name": "eslint-plugin-salute-react",
  "version": "2.0.0",
  "description": "Salute eslint plugin for react",
  "homepage": "https://github.com/salute-developers/grail/tree/master/packages/eslint-plugin-salute-react",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salute-developers/grail.git"
  },
  "author": "Salute Frontend Team <salute.developers@gmail.com>",
  "type": "module",
  "exports": {
    "./flat": "./dist/esm/plugin-salute-react.js",
    ".": "./dist/cjs/plugin-salute-react-legacy.cjs"
  },
  "scripts": {
    "build": "pnpm run build:cjs && pnpm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc",
    "lint": "eslint ./src",
    "test": "vitest run"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.24.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "22.13.4",
    "@typescript-eslint/rule-tester": "8.24.0",
    "eslint": "9.20.1",
    "eslint-plugin-eslint-plugin": "6.4.0",
    "typescript": "5.7.3",
    "vitest": "3.0.5"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=8.0.0",
    "@typescript-eslint/parser": ">=8.0.0",
    "eslint": "^8.50.0 || ^9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
